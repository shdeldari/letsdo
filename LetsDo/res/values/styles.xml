<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
        <style name="AppThemeDark" parent="@android:style/Theme.DeviceDefault">
		<item name="nz.alex.letsdo:switchStyle">@style/switch_dark</item>
	</style>

    <style name="AppThemeLight" parent="@android:style/Theme.DeviceDefault.Light">
		<item name="nz.alex.letsdo:switchStyle">@style/switch_light</item>
	</style>
	
	<style name="switch_dark">
	    <item name="@attr/colorChecked">#FFFFFF</item>
	    <item name="@attr/colorUnChecked">#808080</item>
	    <item name="@attr/backgroundDrawable">@drawable/switch_bg_holo_dark</item>
	    <item name="@attr/switchDrawable">@drawable/switch_thumb_activated_holo_dark</item>
	</style>

	<style name="switch_light">
	    <item name="@attr/colorChecked">#FFFFFF</item>
	    <item name="@attr/colorUnChecked">#181818</item>
	    <item name="@attr/backgroundDrawable">@drawable/switch_bg_holo_light</item>
	    <item name="@attr/switchDrawable">@drawable/switch_thumb_activated_holo_light</item>
	</style>
	
</resources>
    
